#include <stdlib.h>
#include <stdio.h>
#include <math.h>

//analise de raizes em uma equacao do segundo grau
int main() {
   float a,b,c,delta,x1,x2;

   printf("Digite o coeficiente a: ");
   scanf("%f", &a);
   printf("Digite o coeficiente b: ");
   scanf("%f", &b);
      printf("Digite o coeficiente c: ");
   scanf("%f", &c);

   delta = (b*b) - 4*a*c;

   // Verifica o valor de delta
    if (delta > 0) {
        printf("\nHa duas raizes reais!\n");
    } else if (delta == 0 ) {
        printf("\nHa apenas uma raiz!\n");
    } else {
        printf("\nNao ha raizes reais!\n");
    }
   return 0;
}
